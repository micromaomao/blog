doctype html
html(lang=lang_obj.id)
  head
    meta(charset="utf-8")
    title= lang_obj.title
    meta(name="keywords",content=lang_obj.tags.join(','))
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    -if (lang_obj.cover_image)
      meta(property="og:image",content=lang_obj.cover_image)
    style(type="text/css")!= "\n" + css
    link(rel="stylesheet", href="https://unpkg.com/highlight.js@9.16.2/styles/idea.css")
  body
    -if (lang_obj.cover_image)
      img(src=lang_obj.cover_image, alt="cover image", class="coverimg")
    h1= lang_obj.title
    -if (lang_obj.tags.length > 0)
      .tags
        each t, i in lang_obj.tags
          -if (i != 0)
            | #{" "}
          a.tag(href="../tagindex/" + encodeURIComponent(t) + ".html")= t

    != lang_obj.html

    p.footer
      | Published
      |
      span.time= "on " + lang_obj.time.toDateString()
      | .<br>
      |
      | Authored by <a href="https://maowtm.org">maowtm (Tingmao Wang)</a> &lt;m@maowtm.org&gt;.<br>
